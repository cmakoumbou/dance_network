<li>
  <span class="content"><%= textpost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(textpost.created_at) %> ago.
  </span>
  <% if current_user?(textpost.user) %>
    <%= link_to "delete", textpost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: textpost.content %>
  <% end %>
</li>