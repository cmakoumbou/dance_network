<% provide(:title, 'Sign up') %>
<h1><strong>Sign up</strong></h1>

<div class="row">
<div class="col-md-6">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %>
  <%= f.text_field :username, class: "form-control special_border" %></div></br>

  <div><%= f.label :email %>
  <%= f.email_field :email, class: "form-control special_border" %></div></br>

  <div><%= f.label :password %>
  <%= f.password_field :password, class: "form-control special_border" %></div></br>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control special_border" %></div></br>

  <div><%= f.submit "Create my account", class: "btn btn-default" %></div></br>
<% end %>

<%= render "devise/shared/links" %>
