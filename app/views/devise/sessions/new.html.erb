<% provide(:title, 'Sign in') %>
<h1><strong>Sign in</strong></h1>


<div class="row">
  <div class="col-md-6">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: "form-control special_border" %></div></br>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: "form-control special_border" %></div></br>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div></br>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-default" %></div></br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
