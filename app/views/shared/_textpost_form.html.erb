<div class="form-group">
  <%= form_for(@textpost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
	<%= f.text_area :content, placeholder: "Compose new textpost...", class: "form-control special_textarea", :rows => 6 %>
	<h4><%= f.submit "Post", class: "btn btn-default pull-right" %></h4>
  <% end %>
</div>
