<% provide(:title, @user.first_name + " " + @user.last_name) %>
<div class="row">
  <aside class="span4">
    <section>
      <p><%= image_tag @user.avatar.url(:thumb) %></p>
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <% if !@user.bio.blank? %>
      	<p><%= @user.bio %></p>
      <% end %>
      <% if !@user.city.blank? %>
      	<p><%= @user.city %></p>
      <% end %>
      <%= link_to image_tag("mypicture.png", alt: "mypicture") %>
    </section>
  </aside>
</div>
