<header>
  <div class="navbar navbar-default navbar-fixed-top" role"navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Dance Network", root_path, class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Users", users_index_path %></li>
            <li><%= link_to "Activities", activities_index_path %></li>
            <li class="dropdown">
              <% if current_user.messages.are_to(current_user).unreaded.count == 0 %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Message<span class="caret"></span></a>
              <% else %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Messages <span class="badge"><%= current_user.messages.are_to(current_user).unreaded.count %></span></a>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Inbox", messages_path %></li>
                <li><%= link_to "Send a message", new_message_path %></li>
              </ul>
            </li>
        </ul>     
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Info</a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Help", help_path %></li>
              <li><%= link_to "Contact", contact_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account</a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile", user_root_path(current_user) %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
            </ul>
          </li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>