<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "dance network", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Users", users_index_path %></li>
            <li><%= link_to "Activities", activities_index_path %></li>
            <li id="fat-menu" class="dropdown">
              <% if current_user.messages.are_to(current_user).unreaded.count == 0 %>
                <a id="messages-count" href="#" class="dropdown-toggle" data-toggle="dropdown"> Messages <b class="caret"></b></a>
              <% else %>
                <a id="messages-count" href="#" class="dropdown-toggle" data-toggle="dropdown"> Messages (<%= current_user.messages.are_to(current_user).unreaded.count %>) <b class="caret"></b></a>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "Inbox", messages_path %></li>
                <li><%= link_to "Send a message", new_message_path %></li>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", user_root_path(current_user) %></li>
                <li><%= link_to "Settings", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>