<!DOCTYPE html>
<html>
<head>
  <% if user_signed_in? %>
    <% if current_user.messages.are_to(current_user).unreaded.count == 0 %>
      <title id="title"><%= full_title(yield(:title)) %></title>
    <% else %>
      <title id="title">(<%= current_user.messages.are_to(current_user).unreaded.count %>) <%= full_title(yield(:title)) %></title>
    <% end %>
  <% else %>
    <title id="title"><%= full_title(yield(:title)) %></title>
  <% end %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= render 'layouts/pusher' %>
</head>
<body>
	<%= render 'layouts/header' %>
    <div class="container">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
		<%= yield %>
		<%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>