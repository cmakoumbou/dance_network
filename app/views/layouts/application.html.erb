<!DOCTYPE html>
<html>
<head>
  <% if user_signed_in? %>
    <% if current_user.messages.are_to(current_user).unreaded.count == 0 %>
      <title><%= full_title(yield(:title)) %></title>
    <% else %>
      <title>(<%= current_user.messages.are_to(current_user).unreaded.count %>) <%= full_title(yield(:title)) %></title>
    <% end %>
  <% else %>
    <title><%= full_title(yield(:title)) %></title>
  <% end %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= render 'layouts/pusher' %>
</head>
<body>
	<%= render 'layouts/header' %>
  <div class="container main" id="main-container">
    <%= render 'layouts/messages' %>
		<%= yield %>
	</div>
</body>
</html>